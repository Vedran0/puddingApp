<%= form_for @match, html: { class: "form" } do |f| %>
  <%= render partial: 'layouts/error_messages', as: :object, object: @match %>
  <%= f.hidden_field :tournament_id, value: f.object.tournament.id %>

  <div class="form-field-outer-wrapper--text_field">
    <div class="form-field-wrapper">
      <div class="form-field-label">Place</div>
      <%= f.text_field :place, placeholder: "Name of the place...", class: "text-field", id: "place" %>
    </div>
  </div>

  <div class="form-field">
    <%= f.fields_for :results do |ff| %>
      <%= ff.hidden_field :pudding_id %>
      <div class="form-field-outer-wrapper">
        <div class="form-field-wrapper">
          <div class="form-field-label"><%= ff.object.pudding.name %></div>
          <div class="number-field-decrement number-field-control">-</div>
            <%= ff.number_field :points, class: "number-field", min: 0 %>
          <div class="number-field-increment number-field-control">+</div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="form-field-outer-wrapper">
    <div class="form-field-wrapper">
      <%= f.submit "Submit", class: "button button-green" %>
      <%= link_to "Back", @tournament, class: "button button-red" %>
    </div>
  </div>
<% end %>
