<% if SongOfTheDay.today? %>
  <div class="song-outer-wrapper">
    <div class="song-wrapper">
      <div class="song-name"><%= song_of_the_day.of_the_day.strftime("%A, %d.%m.%Y.") %></div>
      <iframe width="420" height="315" src="https://www.youtube.com/embed/<%= song_of_the_day.song.strip_url %>?showinfo=0" class="song"></iframe>
      <div class="song-links-wrapper">
        <div class="song-name"><%= song_of_the_day.song.name %></div>
      </div>
    </div>
  </div>
<% end %>