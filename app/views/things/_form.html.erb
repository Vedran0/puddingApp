<%= form_for @thing, class: "form" do |f| %>

  <div class="form-field">
    <div class="form-field-outer-wrapper">
      <div class="form-field-wrapper">
        <div class="form-field-label">Describe a goal</div>
        <%= f.text_field :description, class: "text-field" %>
      </div>
    </div>
  </div>

  <div class="form-field">
    <div class="form-field-outer-wrapper">
      <div class="form-field-wrapper">
        <div class="form-field-label">How hard it is?</div>
        <% heaviness = [["Very easy","1"],["Easy","2"],["We will do it","3"],["We CAN do it!","4"],["One day","5"]] %>
        <%= f.select :achievement_heaviness, options_for_select(heaviness, f.object.achievement_heaviness), class: 'select' %>
      </div>
    </div>
  </div>

  <div class="form-field">
    <div class="form-field-outer-wrapper">
      <div class="form-field-wrapper">
        <%= f.submit "Submit", class: "button button-green" %>
        <%= link_to 'Back', things_path, class: "button button-red" %>
      </div>
    </div>
  </div>

<% end %>
