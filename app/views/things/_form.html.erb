<%= form_for @thing, class: "form" do |f| %>

  <div class="form-field">
    <div class="form-field-outer-wrapper">
      <div class="form-field-wrapper">
        <div class="form-field-label">Describe the goal</div>
        <%= f.text_field :description, class: "text-field" %>
      </div>
    </div>
  </div>

  <div class="form-field">
    <div class="form-field-outer-wrapper">
      <div class="form-field-wrapper">
        <div class="form-field-label">How hard it is?</div>
          <select id="thing_achievement_heaviness" name="thing[achievement_heaviness]" class="select">
            <option disabled selected>Select...</option>
            <option value="1">Very easy</option>
            <option value="2">Easy</option>
            <option value="3">We will do it</option>
            <option value="4">We CAN do it!</option>
            <option value="5">One day</option>
          </select>
      </div>
    </div>
  </div>

  <div class="form-field">
    <div class="form-field-outer-wrapper">
      <div class="form-field-wrapper">
        <%= f.submit "Submit", class: "button button-green" %>
        <%= link_to 'Back', things_path, class: "button button-red" %>
      </div>
    </div>
  </div>

<% end %>
