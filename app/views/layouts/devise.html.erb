<!DOCTYPE html>
<html>
<head>
  <title>PuddingApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%= favicon_link_tag %>
</head>
<body class="background-pattern-christmas_one">
  <%= render 'layouts/devise_header' %>
  <div class="js_notices">
    <%= render 'layouts/notices' %>
  </div>
  <%= yield %>
  <%#= render 'layouts/footer' %>
  <script>
    $(function(){
      $.fn.snow({ minSize: 5, maxSize: 50, newOn: 1000 });
    });
  </script>
</body>
</html>
