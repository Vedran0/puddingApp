<% flash.each do |name, msg| %>
  <% if msg.is_a?(String) and msg.length > 0 %>
        <div class="js_close_flash">
          <div data-alert class="<%= name.to_s == 'notice' ? 'success' : 'alert' %>">
            <%= content_tag :p, msg %>
          </div>
        </div>
  <% end %>
<% end %>

