<h1>Holidays</h1>
<div class="holiday-countdown">
  <%= render 'shared/countdown_clock', holiday: Holiday.next %>
</div>

<h1>Holidays</h1>
<div class="owl-carousel">
  <% @holidays.each do |holiday| %>
    <%= render 'holidays/holiday', holiday: holiday %>
  <% end %>
</div>
<div class="button button-blue what_is_this-button">What!?</div>
<%= link_to '+AddHoliday', new_holiday_path, class: "button button-green fixed-control" %>


<script>
  $(".owl-carousel").owlCarousel({
    loop:false,
    startPosition: $(".holiday-outer-wrapper").index($(".holiday-<%= Holiday.next.id %>").first()),
    responsive:{
        0:{
            items:1,
            loop:true
        },
        600:{
            items:2,
            loop:true
        },
        900:{
            items:3,
            loop:true
        },
        1200:{
            items:4,
            loop:true
        }
    }
  });
</script>