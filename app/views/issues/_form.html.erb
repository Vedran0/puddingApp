<%= form_for @issue, class: "form" do |f| %>

  <div class="form-field">
    <div class="form-field-outer-wrapper">
      <div class="form-field-wrapper">
        <div class="form-field-label">Tell me what's the problem?</div>
        <%= f.text_field :text, class: "text-field" %>
      </div>
    </div>
  </div>

  <div class="form-field">
    <div class="form-field-outer-wrapper">
      <div class="form-field-wrapper">
        <%= f.submit "Submit", class: "button button-green" %>
        <%= link_to 'Back', issues_path, class: "button button-red" %>
      </div>
    </div>
  </div>

<% end %>
